<!DOCTYPE html>
<html lang="en" version="2.0.0">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <script src="https://kit.fontawesome.com/ccc2850fdc.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
    crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="/image/icon_flosi.jpg" type="image/x-icon">
  <title>
    <%= title %>
  </title>
</head>
<noscript>
  <h1>javascript is not allowed in your browser</h1>
</noscript>

<body class="">
  <header class="header navbar navbar-expand-md shadow bg-white px-3 mt-4 rounded-5 m-auto">
    <div class="navbar-brand">
      <a href="/" class="nav-link">
        <h1 class="logo-name">flosi</h1>
      </a>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <!--  -->
      <% if(!title.includes("foreign")) { %>
        <ul class="nav align-items-center">
            <li class="nav-item me-3 fs-5">
              Welcomme, <span class="fs-5 fw-bold text-capitalize">
                <%= username %>
              </span>
            </li>
            <li class="nav-item me-3">
              <button class="btn btn-ligth position-relative btn-notification">
                <i class="fa fa-bell fs-2"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger fs-6">
                  0
                  <span class="visually-hidden">unread messages</span>
                </span>
              </button>
            </li>
            <li class="nav-item">
              <% if (title.includes("room")) {%>
                <button class="btn btn-light rounded-pill chevron-down-btn"><i
                    class="fa fa-chevron-circle-down"></i></button>
                <% } else {%>
                  <form action="/signOut" method="post">
                    <button class="btn btn-outline-danger fs-6" type="submit"><i class="fa fa-sign-out me-2"></i>sign
                      out</button>
                  </form>
                  <% } %>
            </li>
          </ul>
          <% if (title.includes("room")) { %>
            <div class="setting-box bg-light shadow rounded p-2">
              <ul class="nav flex-column">
                <% if (isAdmin) {%>
                  <li class="nav-item mb-2 d-grid">
                    <button class="btn btn-light text-capitalize" data-bs-toggle="modal" data-bs-target="#add-friends">add
                      friend</button>
                  </li>
                  <li class="nav-item mb-2 d-grid">
                    <button class="btn btn-light text-capitalize" data-bs-toggle="modal"
                      data-bs-target="#delete-friends">delete friend</button>
                  </li>
                  <% } %>
                    <li class="nav-item mb-2">
                      <form action="/room/:id/createJoin_another_room" method="post" class="d-grid">
                        <button class="btn btn-light text-capitalize">create/join another room</button>
                      </form>
                    </li>
                    <% if (isAdmin && title.includes("room")) { %>
                      <li class="nav-item mb-2">
                        <form action="/room/<%= id %>/deleteRoom" method="post" class="d-grid">
                          <button class="btn btn-light text-capitalize">delete room</button>
                        </form>
                      </li>
                      <% } %>
                        <li class="nav-item mb-2">
                          <form action="/signOut" method="post" class="d-grid">
                            <button class="btn btn-outline-danger fs-6 text-capitalize" type="submit"><i
                                class="fa fa-sign-out me-2"></i>sign out</button>
                          </form>
                        </li>
              </ul>
            </div>
          <% } %>
          <div class="notification-box bg-light shadow rounded p-2">
            <h2 class="text-dark text-capitalize">notification</h2>
            <ul class="nav flex-column w-100">
              <li></li>
            </ul>
          </div>
        <% }else { %>
          <form action="/logIn" method="post">
            <ul class="nav align-items-center justify-content-center">
                <li class="nav-item">
                    <div class="form-floating me-3">
                        <input type="email" name="emailenterd" class="form-control" id="floatingInput"
                            placeholder="name@example.com" required>
                        <label for="floatingInput">Email address</label>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="form-floating me-3">
                        <input type="password" name="passwordentred" class="form-control" id="floatingPassword"
                            placeholder="Password" required>
                        <label for="floatingPassword">Password</label>
                    </div>
                </li>
                <li class="nav-item  d-grid">
                    <button type="submit" class="btn btn-primary btn-log">log in</button>
                </li>
            </ul>
          </form>
        <% } %>
    </div>
    <!--  -->
  </header>
  <div class="modal fade" id="add-friends" tabindex="-1" aria-labelledby="add-friends" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add Friends</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <% if (title.includes("room")) { %>
          <form action="/room/<%= id %>/newFriend" method="post">
            <div class="modal-body">
              <div class="form-floating mb-3">
                <input type="text" name="newFriend" class="form-control" id="floatingInput" placeholder="ex: mouad">
                <label for="floatingInput">add friend</label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary text-uppercase">add</button>
            </div>
          </form>
          <% } %>
      </div>
    </div>
  </div>
  <div class="modal fade" id="delete-friends" tabindex="-1" aria-labelledby="delete-friends" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Delete Friends</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <% if (title.includes("room")) { %>
          <form action="/room/<%= id %>/deleteFriend" method="post" class="delete-friend">
            <div class="modal-body">
              <div class="form-floating mb-3">
                <ul class="nav flex-column w-50 m-auto">
                  <% friendsList.forEach( friend=> { %>
                    <div class="d-flex justify-content-between mb-2 border-bottom ">
                      <li class="nav-item fs-4 fw-normal">
                        <%= friend.name_inveted %>
                      </li>
                      <input type="checkbox" name="friendCkeck" value="<%= friend.name_inveted %>"
                        id="<%= friend.name_inveted.replace(/\s+/g, " _") %>" class="form-check-input">
                    </div>
                    <% }) %>
                </ul>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary text-uppercase delete-friend-btn">delete</button>
            </div>
          </form>
          <% } %>
      </div>
    </div>
  </div>